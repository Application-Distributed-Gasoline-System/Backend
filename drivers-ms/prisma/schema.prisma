generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum License {
  C
  D
  E
  G
}

model Driver {
  id          String   @id @default(uuid())
  name        String // DESDE AUTH SERVICE
  license     License?
  email       String?
  userId      String   @unique // DESDE AUTH SERVICE por el momento en el json se puede poner un string cualquiera
  phone       String?
  isAvailable Boolean @default(true)
  birthDate   DateTime?
  // para despues la ubicacion si es bueno
  registrationDate DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}
