generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model FuelRecord {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  externalId String? // id externo para idempotencia (ej: eventId)
  driverId   String 
  vehicleId  String 
  routeId    String? 

  liters        Float
  fuelType      String
  machineryType MachineryType
  odometer      Float?
  gpsLocation   String?
  source        String?

  estimatedFuelL Float?
  distanceKm     Float?
  deltaPercent   Float?

  recordedAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([vehicleId])
  @@index([driverId])
  @@index([routeId])
  @@index([recordedAt])
  @@index([externalId])
}

enum MachineryType {
  LIGHT
  HEAVY
}
