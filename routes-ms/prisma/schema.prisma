generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RouteStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum MachineryType {
  LIGHT
  HEAVY
}

enum EngineType {
  GASOLINE
  DIESEL
  ELECTRIC
  HYBRID
}

enum License {
  C
  D
  E
  G
}

enum VehicleStatus {
  OPERATIONAL
  UNDER_MAINTENANCE
  OUT_OF_SERVICE
}

model Route {
  id             Int           @id @default(autoincrement())
  code           String        @unique
  origin         String
  destination    String
  distanceKm     Float
  machineryType  MachineryType
  estimatedFuelL Float?
  actualFuelL    Float?
  status         RouteStatus   @default(PLANNED)
  scheduledAt    DateTime?
  startedAt      DateTime?
  completedAt    DateTime?
  driverId       String
  vehicleId      Int
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  driver  DriverRef  @relation(fields: [driverId], references: [id])
  vehicle VehicleRef @relation(fields: [vehicleId], references: [id])
}

model DriverRef {
  id          String  @id
  name        String?
  license     License?
  isAvailable Boolean @default(true)

  routes Route[]
}

model VehicleRef {
  id                 Int           @id
  plate              String
  engineType         EngineType
  machineryType      MachineryType
  tankCapacity       Float
  engineDisplacement Float
  averageConsumption Float
  mileage            Float
  available          Boolean
  status             VehicleStatus

  routes Route[]
}
